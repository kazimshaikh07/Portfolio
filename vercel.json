{
  "version": 2,
  "builds": [
    {
      "src": "portfolio/portfolio/vercel.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "includeFiles": [
          "portfolio/static/**",
          "portfolio/templates/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "portfolio/portfolio/vercel.py" },
    { "src": "/(.*)", "dest": "portfolio/portfolio/vercel.py" }
  ]
}

